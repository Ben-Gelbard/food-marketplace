<!DOCTYPE html>
<html>
  <head>
    <title>FoodMarketplace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<br>

<%# change to logged in homepage %>
<div id="landing_page_post_food" style="position: absolute; top: 20px; left:20px;"><%= link_to('Home', :root)  %></div> 

  <div id="landing_page_find_food" style="position: absolute; top: 20px; left:80px;"><%= link_to('Find Food', :products)  %></div>

<div id="landing_page_post_food" style="position: absolute; top: 20px; left:170px;"><%= link_to('Post Food', new_product_path)  %></div>


<% if user_signed_in? %>
    
    <p style="position: absolute; top: 40px; right: 20px;"><%= link_to('Edit Account', '/users/edit') %>
    <p style="position: absolute; top: 20px; right:20px;">Welcome <%= link_to(current_user.firstname, '/pages/landing_page_login') %> (<%= link_to('Logout', destroy_user_session_path, method: :delete) %>) </p>     

<% else %>
<div id="landing_page_log_in" style="position: absolute; top: 20px; right:20px;"><%= link_to('Login', new_user_session_path)  %></div>
<% end %>
    <%= yield %>
  </body>
</html>
